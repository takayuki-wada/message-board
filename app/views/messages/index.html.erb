<div class="panel panel-default">
	<div class="panel-heading">メッセージ一覧</div>
	<div class="panel-body">
		<% #パネルの中に、既に登録済みのデータを出力 %>
		<% @messages.each do |message| %>
			<span class="label label-info"><%= message.name %></span>
			<%= message.body %>
			(
				<% #抽出されたメッセージの右側に編集ページのリンクを作成 %>
				<%= link_to "edit", edit_message_path(message) %>
				<% #対象データの削除 %>
				<%= link_to "destroy", message, method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
			)
			<% if false %>
			<% #デバッグ %>
			<%= binding.pry %>
			<% end %>
			<br>
		<% end %>
	</div>
</div>

<% #部分テンプレートの読込み(パーシャル) / /views/messages/_form.html.erbを呼出す %>
<%= render 'form' %>
