<form class="form_horizontal">
	<div class="col-xs-offset-2 col-xs-10">
		<div class="panel panel-default">
			<div class="panel-heading">メッセージ一覧</div>
				<div class="form_group">
					<div class="panel-body">
						<% #パネルの中に、既に登録済みのデータを出力 %>
						<% @messages.each do |message| %>
							<span class="label label-info"><%= message.name %></span>
							<%= message.body %>
							(
								<% #抽出されたメッセージの右側に編集ページのリンクを作成 %>
								<%= link_to "edit", edit_message_path(message) %>

								<% if false %>
									<% #pry-byebugでステップ実行 %>
									<% binding.pry %>
								<% end %>

								<% #対象データの削除 %>
								<%= link_to "destroy", message, method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
							)
							<br>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<%= form_for(@message) do |f| %>
		<div class="col-xs-offset-4 col-xs-8">
			<div class="form_group">
				<div class="col-xs-2">名前:	</div>
				<% if false %><%= f.text_field :name %><% end %>
				<div class="col-xs-10">
					<%= f.text_area :name, class: 'form_control' %>
				</div>
			</div>

			<div class="form_group">
				<div class="col-xs-2">内容:</div>
				<% if false %><%= f.text_field :body %><% end %>
				<div class="col-xs-10">
					<%= f.text_area :body, class: 'form_control' %>
				</div>
			</div>

			<div class="form_group">
				<div class="col-xs-offset-2 col-xs-10">
					<% if false %><%= f.submit class: "btn btn-sm btn-primary" %><% end %>
					<%= f.submit class: "btn btn-primary" %>
				</div>
			</div>
		<% end %>
	</div>
</form>

<% if false %>
	<% #部分テンプレートの読込み(パーシャル) / /views/messages/_form.html.erbを呼出す %>
	<%= render 'form' %>
<% end %>
